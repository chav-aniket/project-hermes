---
import { pwaInfo } from "virtual:pwa-info";

import ReloadPrompt from "@astroComponents/ReloadPrompt.astro";
import { initThemeScript } from "@utils/theme";

export interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <meta name="description" content="Aniket's Observatorium" />
    <title>{title}</title>
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
    <meta name="generator" content={Astro.generator} />
    <link rel="apple-touch-icon" href="/apple-touch-icon.png" sizes="180x180" />
    <link rel="mask-icon" href="/mask-icon.svg" color="#ea580c" />
    <!-- Theme color - dynamically updated by theme.ts -->
    <meta name="theme-color" content="#fed7aa" />
    <!-- iOS PWA status bar -->
    <meta name="apple-mobile-web-app-capable" content="yes" />
    <meta name="apple-mobile-web-app-status-bar-style" content="default" />

    <script src="../pwa.ts"></script>
    <script set:html={initThemeScript} />
    <script>
      import { inject } from "@vercel/analytics";
      inject({ mode: import.meta.env.MODE });
    </script>
    {pwaInfo && <Fragment set:html={pwaInfo.webManifest.linkTag} />}
  </head>
  <body>
    <main>
      <slot />
    </main>
    <ReloadPrompt />
  </body>
</html>
<style is:global>
  :root {
    --accent: 124, 58, 237;
    --accent-gradient: linear-gradient(
      45deg,
      rgb(var(--accent)),
      #da62c4 30%,
      white 60%
    );
  }
  html {
    font-family: "JetBrains Mono", monospace;
    @apply bg-primary-light relative;
    box-sizing: border-box;
    text-decoration: none;
  }

  a:focus,
  input:focus {
    outline: none;
  }

  html.dark {
    @apply bg-primary-dark;
  }

  /* Mobile: Wave overlay for iOS status bar sync */
  html::before {
    content: "";
    @apply fixed pointer-events-none z-[9999] bg-primary-dark;
    top: 0;
    left: 0;
    right: 0;
    height: 120vh;
    transform: translateY(-100%);
    /* Wave-shaped bottom edge */
    clip-path: polygon(
      0% 0%,
      100% 0%,
      100% 85%,
      90% 88%,
      75% 85%,
      60% 90%,
      45% 85%,
      30% 90%,
      15% 85%,
      0% 88%
    );
  }

  html.dark::before {
    @apply bg-primary-light;
  }

  /* Mobile: trigger wave animation */
  html.theme-wave::before {
    @apply animate-wash-wave;
  }

  /* Desktop: hide the wave overlay, use color transitions instead */
  @media (min-width: 768px) {
    html::before {
      display: none;
    }
  }

  /* Desktop: sunrise/sunset color transitions (inspired by jzhao.xyz) */
  html.theme-sunrise {
    @apply animate-sunrise;
  }

  html.theme-sunset {
    @apply animate-sunset;
  }
  code {
    font-family: Menlo, Monaco, Lucida Console, Liberation Mono,
      DejaVu Sans Mono, Bitstream Vera Sans Mono, Courier New, monospace;
  }

  /* Reusable hover utilities */
  .hover-scale {
    @apply transition-all duration-300 ease-out;
  }
  .hover-scale:hover {
    @apply scale-105;
  }

  .hover-scale-lg {
    @apply transition-all duration-300 ease-out;
  }
  .hover-scale-lg:hover {
    @apply scale-110 opacity-80;
  }

  .hover-glow {
    @apply transition-colors duration-300;
  }
  .hover-glow:hover {
    @apply bg-tertiary-light;
  }
  html.dark .hover-glow:hover {
    @apply bg-tertiary-dark;
  }
</style>
