---
import { pwaInfo } from "virtual:pwa-info";

import ReloadPrompt from "@astroComponents/ReloadPrompt.astro";
import { initThemeScript } from "@utils/theme";

export interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <meta name="description" content="Aniket's Observatorium" />
    <title>{title}</title>
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
    <meta name="generator" content={Astro.generator} />
    <link rel="apple-touch-icon" href="/apple-touch-icon.png" sizes="180x180" />
    <link rel="mask-icon" href="/mask-icon.svg" color="#ea580c" />
    <!-- Theme color - dynamically updated by theme.ts -->
    <meta name="theme-color" content="#fed7aa" />
    <!-- iOS PWA status bar -->
    <meta name="apple-mobile-web-app-capable" content="yes" />
    <meta name="apple-mobile-web-app-status-bar-style" content="default" />

    <script src="../pwa.ts"></script>
    <script set:html={initThemeScript} />
    <script>
      import { inject } from "@vercel/analytics";
      inject({ mode: import.meta.env.MODE });
    </script>
    {pwaInfo && <Fragment set:html={pwaInfo.webManifest.linkTag} />}
  </head>
  <body>
    <main>
      <slot />
    </main>
    <ReloadPrompt />
  </body>
</html>
<style is:global>
  :root {
    --accent: 124, 58, 237;
    --accent-gradient: linear-gradient(
      45deg,
      rgb(var(--accent)),
      #da62c4 30%,
      white 60%
    );
    /* Theme colors as CSS variables (inspired by jzhao.xyz sunlit) */
    --theme-bg: theme(colors.primary.light);
    --theme-text: theme(colors.textLight.DEFAULT);
    --theme-secondary: theme(colors.secondary.light);
    --theme-tertiary: theme(colors.tertiary.light);
    /* Transition timing for theme changes */
    --theme-transition: 1s cubic-bezier(0.455, 0.19, 0, 0.985);
  }

  html.dark {
    --theme-bg: theme(colors.primary.dark);
    --theme-text: theme(colors.textDark.DEFAULT);
    --theme-secondary: theme(colors.secondary.dark);
    --theme-tertiary: theme(colors.tertiary.dark);
    --theme-transition: 1.7s cubic-bezier(0.455, 0.19, 0, 0.985);
  }

  html {
    font-family: "JetBrains Mono", monospace;
    background-color: var(--theme-bg);
    @apply relative;
    box-sizing: border-box;
    text-decoration: none;
  }

  a:focus,
  input:focus {
    outline: none;
  }

  /* Theme transition phases */
  :root {
    --phase-duration: 600ms;
    --shadow-in-duration: 400ms; /* Synced with toggle button animation */
    --melt-duration: 300ms;
    /* Strong midday shadows - like overhead sun/moon */
    --text-shadow-light: 0 6px 20px rgba(0, 0, 0, 0.6), 0 2px 8px rgba(0, 0, 0, 0.4);
    --text-shadow-dark: 0 6px 20px rgba(255, 255, 255, 0.5), 0 2px 8px rgba(255, 255, 255, 0.3);
    --box-shadow-light: 0 12px 40px rgba(0, 0, 0, 0.5), 0 4px 12px rgba(0, 0, 0, 0.3);
    --box-shadow-dark: 0 12px 40px rgba(255, 255, 255, 0.4), 0 4px 12px rgba(255, 255, 255, 0.2);
  }

  /* Phase 1: Shadows appear (midday overhead light) - synced with toggle */
  /* Container shadows for project cards and pills/tags */
  html.theme-shadow-in [class*="card"],
  html.theme-shadow-in [class*="Card"],
  html.theme-shadow-in [class*="pill"],
  html.theme-shadow-in [class*="Pill"],
  html.theme-shadow-in [class*="tag"] {
    transition: box-shadow var(--shadow-in-duration) ease-out !important;
    box-shadow: var(--box-shadow-light);
  }

  html.dark.theme-shadow-in [class*="card"],
  html.dark.theme-shadow-in [class*="Card"],
  html.dark.theme-shadow-in [class*="pill"],
  html.dark.theme-shadow-in [class*="Pill"],
  html.dark.theme-shadow-in [class*="tag"] {
    box-shadow: var(--box-shadow-dark);
  }

  /* Text shadows for main headings */
  html.theme-shadow-in h1,
  html.theme-shadow-in h2,
  html.theme-shadow-in h3 {
    transition: text-shadow var(--shadow-in-duration) ease-out !important;
    text-shadow: var(--text-shadow-light);
  }

  html.dark.theme-shadow-in h1,
  html.dark.theme-shadow-in h2,
  html.dark.theme-shadow-in h3 {
    text-shadow: var(--text-shadow-dark);
  }

  /* Phase 2a: Content melts into the page - shadows fade as content melts */
  html.theme-melt main {
    transition:
      opacity var(--melt-duration) ease-in,
      filter var(--melt-duration) ease-in !important;
    opacity: 0;
    filter: blur(16px);
  }

  /* Shadows fade out during melt */
  html.theme-melt [class*="card"],
  html.theme-melt [class*="Card"],
  html.theme-melt [class*="pill"],
  html.theme-melt [class*="Pill"],
  html.theme-melt [class*="tag"] {
    transition: box-shadow var(--melt-duration) ease-in !important;
    box-shadow: none;
  }

  html.theme-melt h1,
  html.theme-melt h2,
  html.theme-melt h3 {
    transition: text-shadow var(--melt-duration) ease-in !important;
    text-shadow: none;
  }

  /* Phase 2b: Hidden during color sweep */
  html.theme-hidden main {
    opacity: 0;
    filter: blur(16px);
    visibility: hidden;
  }

  /* Phase 3: Content emerges - shadows fade back in */
  html.theme-unmelt main {
    transition:
      opacity var(--phase-duration) ease-out,
      filter var(--phase-duration) ease-out !important;
    opacity: 1;
    filter: blur(0);
  }

  /* Shadows fade in during unmelt */
  html.theme-unmelt [class*="card"],
  html.theme-unmelt [class*="Card"],
  html.theme-unmelt [class*="pill"],
  html.theme-unmelt [class*="Pill"],
  html.theme-unmelt [class*="tag"] {
    transition: box-shadow var(--phase-duration) ease-out !important;
    box-shadow: var(--box-shadow-light);
  }

  html.dark.theme-unmelt [class*="card"],
  html.dark.theme-unmelt [class*="Card"],
  html.dark.theme-unmelt [class*="pill"],
  html.dark.theme-unmelt [class*="Pill"],
  html.dark.theme-unmelt [class*="tag"] {
    box-shadow: var(--box-shadow-dark);
  }

  html.theme-unmelt h1,
  html.theme-unmelt h2,
  html.theme-unmelt h3 {
    transition: text-shadow var(--phase-duration) ease-out !important;
    text-shadow: var(--text-shadow-light);
  }

  html.dark.theme-unmelt h1,
  html.dark.theme-unmelt h2,
  html.dark.theme-unmelt h3 {
    text-shadow: var(--text-shadow-dark);
  }

  /* Phase 4: Shadows recede */
  html.theme-shadow-out [class*="card"],
  html.theme-shadow-out [class*="Card"],
  html.theme-shadow-out [class*="pill"],
  html.theme-shadow-out [class*="Pill"],
  html.theme-shadow-out [class*="tag"] {
    transition: box-shadow var(--phase-duration) ease-in !important;
    box-shadow: none;
  }

  html.theme-shadow-out h1,
  html.theme-shadow-out h2,
  html.theme-shadow-out h3 {
    transition: text-shadow var(--phase-duration) ease-in !important;
    text-shadow: none;
  }

  /* Toggle button - JS handles positioning during transition */
  [data-theme-toggle],
  [data-theme-toggle] * {
    text-shadow: none !important;
    box-shadow: none !important;
  }

  /* Desktop: color sweep that IS the transition */
  @media (min-width: 768px) {
    html::after {
      content: "";
      position: fixed;
      top: 0;
      width: 100%;
      height: 100%;
      pointer-events: none;
      z-index: 9997;
      opacity: 0;
    }

    /* Sunset: sweeps right to left - day → dusk → evening → night */
    html.theme-sunset::after {
      opacity: 1;
      background: linear-gradient(
        to left,
        theme(colors.primary.dark) 0%,
        #1e1b4b 20%,
        #4c1d95 35%,
        #be185d 50%,
        #f97316 70%,
        transparent 100%
      );
      animation: sweep-left var(--melt-duration) ease-out forwards;
    }

    /* Sunrise: sweeps left to right - night → dawn → morning → day */
    html.theme-sunrise::after {
      opacity: 1;
      background: linear-gradient(
        to right,
        theme(colors.primary.light) 0%,
        #fcd34d 20%,
        #fb923c 35%,
        #f472b6 50%,
        #a78bfa 70%,
        transparent 100%
      );
      animation: sweep-right var(--melt-duration) ease-out forwards;
    }
  }

  /* Sweep from right edge to left edge */
  @keyframes sweep-left {
    0% {
      transform: translateX(100%);
    }
    100% {
      transform: translateX(0%);
    }
  }

  /* Sweep from left edge to right edge */
  @keyframes sweep-right {
    0% {
      transform: translateX(-100%);
    }
    100% {
      transform: translateX(0%);
    }
  }

  /* Mobile: wave overlay for iOS status bar sync */
  @media (max-width: 767px) {
    html::before {
      content: "";
      @apply fixed pointer-events-none z-[9999] bg-primary-dark;
      top: 0;
      left: 0;
      right: 0;
      bottom: auto;
      height: 120vh;
      transform: translateY(-100%);
      clip-path: polygon(
        0% 0%,
        100% 0%,
        100% 85%,
        90% 88%,
        75% 85%,
        60% 90%,
        45% 85%,
        30% 90%,
        15% 85%,
        0% 88%
      );
    }

    html.dark::before {
      @apply bg-primary-light;
    }

    html.theme-wave::before {
      @apply animate-wash-wave;
    }
  }

  code {
    font-family: Menlo, Monaco, Lucida Console, Liberation Mono,
      DejaVu Sans Mono, Bitstream Vera Sans Mono, Courier New, monospace;
  }

  /* Reusable hover utilities */
  .hover-scale {
    @apply transition-all duration-300 ease-out;
  }
  .hover-scale:hover {
    @apply scale-105;
  }

  .hover-scale-lg {
    @apply transition-all duration-300 ease-out;
  }
  .hover-scale-lg:hover {
    @apply scale-110 opacity-80;
  }

  .hover-glow {
    @apply transition-colors duration-300;
  }
  .hover-glow:hover {
    background-color: var(--theme-tertiary);
  }
</style>
