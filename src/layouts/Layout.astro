---
import { pwaInfo } from "virtual:pwa-info";

import ReloadPrompt from "@astroComponents/ReloadPrompt.astro";
import { initThemeScript } from "@utils/theme";

export interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <meta name="description" content="Aniket's Observatorium" />
    <title>{title}</title>
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
    <meta name="generator" content={Astro.generator} />
    <link rel="apple-touch-icon" href="/apple-touch-icon.png" sizes="180x180" />
    <link rel="mask-icon" href="/mask-icon.svg" color="#ea580c" />
    <!-- Theme color - dynamically updated by theme.ts -->
    <meta name="theme-color" content="#fed7aa" />
    <!-- iOS PWA status bar -->
    <meta name="apple-mobile-web-app-capable" content="yes" />
    <meta name="apple-mobile-web-app-status-bar-style" content="default" />

    <script src="../pwa.ts"></script>
    <script set:html={initThemeScript} />
    <script>
      import { inject } from "@vercel/analytics";
      inject({ mode: import.meta.env.MODE });
    </script>
    {pwaInfo && <Fragment set:html={pwaInfo.webManifest.linkTag} />}
  </head>
  <body>
    <main>
      <slot />
    </main>
    <ReloadPrompt />
  </body>
</html>
<style is:global>
  :root {
    --accent: 124, 58, 237;
    --accent-gradient: linear-gradient(
      45deg,
      rgb(var(--accent)),
      #da62c4 30%,
      white 60%
    );
    /* Theme colors as CSS variables (inspired by jzhao.xyz sunlit) */
    --theme-bg: theme(colors.primary.light);
    --theme-text: theme(colors.textLight.DEFAULT);
    --theme-secondary: theme(colors.secondary.light);
    --theme-tertiary: theme(colors.tertiary.light);
    /* Transition timing for theme changes */
    --theme-transition: 1s cubic-bezier(0.455, 0.19, 0, 0.985);
  }

  html.dark {
    --theme-bg: theme(colors.primary.dark);
    --theme-text: theme(colors.textDark.DEFAULT);
    --theme-secondary: theme(colors.secondary.dark);
    --theme-tertiary: theme(colors.tertiary.dark);
    --theme-transition: 1.7s cubic-bezier(0.455, 0.19, 0, 0.985);
  }

  html {
    font-family: "JetBrains Mono", monospace;
    background-color: var(--theme-bg);
    @apply relative;
    box-sizing: border-box;
    text-decoration: none;
  }

  a:focus,
  input:focus {
    outline: none;
  }

  /* Theme transition - 4 phases at 400ms each */
  :root {
    --phase-duration: 400ms;
  }

  /* Phase 1: Shadows appear on content */
  html.theme-shadow-in main {
    transition: filter var(--phase-duration) ease-out !important;
    filter: drop-shadow(0 4px 20px rgba(0, 0, 0, 0.3))
      drop-shadow(0 8px 40px rgba(0, 0, 0, 0.2));
  }

  html.dark.theme-shadow-in main {
    filter: drop-shadow(0 4px 20px rgba(255, 255, 255, 0.15))
      drop-shadow(0 8px 40px rgba(255, 255, 255, 0.1));
  }

  /* Phase 2: Content melts (with shadows still visible) */
  html.theme-melt main {
    transition:
      opacity var(--phase-duration) ease-in,
      filter var(--phase-duration) ease-in,
      transform var(--phase-duration) ease-in !important;
    opacity: 0;
    filter: blur(12px) drop-shadow(0 4px 20px rgba(0, 0, 0, 0.3));
    transform: scale(0.97);
  }

  /* Phase 2b: Hidden during color transition */
  html.theme-hidden main {
    opacity: 0;
    filter: blur(12px);
    transform: scale(0.97);
    transition: none !important;
  }

  /* Phase 3: Content unmelts (shadows still present) */
  html.theme-unmelt main {
    transition:
      opacity var(--phase-duration) ease-out,
      filter var(--phase-duration) ease-out,
      transform var(--phase-duration) ease-out !important;
    opacity: 1;
    filter: blur(0) drop-shadow(0 4px 20px rgba(0, 0, 0, 0.3))
      drop-shadow(0 8px 40px rgba(0, 0, 0, 0.2));
    transform: scale(1);
  }

  html.dark.theme-unmelt main {
    filter: blur(0) drop-shadow(0 4px 20px rgba(255, 255, 255, 0.15))
      drop-shadow(0 8px 40px rgba(255, 255, 255, 0.1));
  }

  /* Phase 4: Shadows fade away */
  html.theme-shadow-out main {
    transition: filter var(--phase-duration) ease-in !important;
    filter: none;
  }

  /* Toggle button stays visible throughout */
  html.theme-shadow-in [data-theme-toggle],
  html.theme-melt [data-theme-toggle],
  html.theme-hidden [data-theme-toggle],
  html.theme-unmelt [data-theme-toggle],
  html.theme-shadow-out [data-theme-toggle] {
    opacity: 1 !important;
    filter: none !important;
    transform: none !important;
  }

  /* Desktop: animate background through sunrise/sunset colors */
  @media (min-width: 768px) {
    html.theme-sunrise {
      @apply animate-sunrise;
    }

    html.theme-sunset {
      @apply animate-sunset;
    }
  }

  /* Mobile: wave overlay for iOS status bar sync */
  @media (max-width: 767px) {
    html::before {
      content: "";
      @apply fixed pointer-events-none z-[9999] bg-primary-dark;
      top: 0;
      left: 0;
      right: 0;
      bottom: auto;
      height: 120vh;
      transform: translateY(-100%);
      clip-path: polygon(
        0% 0%,
        100% 0%,
        100% 85%,
        90% 88%,
        75% 85%,
        60% 90%,
        45% 85%,
        30% 90%,
        15% 85%,
        0% 88%
      );
    }

    html.dark::before {
      @apply bg-primary-light;
    }

    html.theme-wave::before {
      @apply animate-wash-wave;
    }
  }

  code {
    font-family: Menlo, Monaco, Lucida Console, Liberation Mono,
      DejaVu Sans Mono, Bitstream Vera Sans Mono, Courier New, monospace;
  }

  /* Reusable hover utilities */
  .hover-scale {
    @apply transition-all duration-300 ease-out;
  }
  .hover-scale:hover {
    @apply scale-105;
  }

  .hover-scale-lg {
    @apply transition-all duration-300 ease-out;
  }
  .hover-scale-lg:hover {
    @apply scale-110 opacity-80;
  }

  .hover-glow {
    @apply transition-colors duration-300;
  }
  .hover-glow:hover {
    background-color: var(--theme-tertiary);
  }
</style>
