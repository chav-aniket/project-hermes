---
import { pwaInfo } from "virtual:pwa-info";

import ReloadPrompt from "@astroComponents/ReloadPrompt.astro";
import { initThemeScript } from "@utils/theme";

export interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <meta name="description" content="Aniket's Observatorium" />
    <title>{title}</title>
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
    <meta name="generator" content={Astro.generator} />
    <link rel="apple-touch-icon" href="/apple-touch-icon.png" sizes="180x180" />
    <link rel="mask-icon" href="/mask-icon.svg" color="#ea580c" />
    <!-- Theme color - dynamically updated by theme.ts -->
    <meta name="theme-color" content="#fed7aa" />
    <!-- iOS PWA status bar -->
    <meta name="apple-mobile-web-app-capable" content="yes" />
    <meta name="apple-mobile-web-app-status-bar-style" content="default" />

    <script src="../pwa.ts"></script>
    <script set:html={initThemeScript} />
    <script>
      import { inject } from "@vercel/analytics";
      inject({ mode: import.meta.env.MODE });
    </script>
    {pwaInfo && <Fragment set:html={pwaInfo.webManifest.linkTag} />}
  </head>
  <body>
    <main>
      <slot />
    </main>
    <ReloadPrompt />
  </body>
</html>
<style is:global>
  :root {
    --accent: 124, 58, 237;
    --accent-gradient: linear-gradient(
      45deg,
      rgb(var(--accent)),
      #da62c4 30%,
      white 60%
    );
    /* Theme colors as CSS variables (inspired by jzhao.xyz sunlit) */
    --theme-bg: theme(colors.primary.light);
    --theme-text: theme(colors.textLight.DEFAULT);
    --theme-secondary: theme(colors.secondary.light);
    --theme-tertiary: theme(colors.tertiary.light);
    /* Transition timing for theme changes */
    --theme-transition: 1s cubic-bezier(0.455, 0.19, 0, 0.985);
  }

  html.dark {
    --theme-bg: theme(colors.primary.dark);
    --theme-text: theme(colors.textDark.DEFAULT);
    --theme-secondary: theme(colors.secondary.dark);
    --theme-tertiary: theme(colors.tertiary.dark);
    --theme-transition: 1.7s cubic-bezier(0.455, 0.19, 0, 0.985);
  }

  html {
    font-family: "JetBrains Mono", monospace;
    background-color: var(--theme-bg);
    @apply relative;
    box-sizing: border-box;
    text-decoration: none;
  }

  a:focus,
  input:focus {
    outline: none;
  }

  /* Theme transition - 4 phases at 600ms each */
  :root {
    --phase-duration: 600ms;
    /* Strong midday shadows - like overhead sun/moon */
    --text-shadow-light: 0 4px 12px rgba(0, 0, 0, 0.4);
    --text-shadow-dark: 0 4px 12px rgba(255, 255, 255, 0.3);
    --box-shadow-light: 0 8px 24px rgba(0, 0, 0, 0.3);
    --box-shadow-dark: 0 8px 24px rgba(255, 255, 255, 0.2);
  }

  /* Phase 1: Shadows appear (midday overhead light) */
  /* Container shadows for cards/pills */
  html.theme-shadow-in [class*="card"],
  html.theme-shadow-in [class*="Card"],
  html.theme-shadow-in [class*="pill"],
  html.theme-shadow-in [class*="Pill"],
  html.theme-shadow-in [class*="badge"],
  html.theme-shadow-in [class*="Badge"],
  html.theme-shadow-in [class*="chip"],
  html.theme-shadow-in [class*="tag"] {
    transition: box-shadow var(--phase-duration) ease-out !important;
    box-shadow: var(--box-shadow-light);
  }

  html.dark.theme-shadow-in [class*="card"],
  html.dark.theme-shadow-in [class*="Card"],
  html.dark.theme-shadow-in [class*="pill"],
  html.dark.theme-shadow-in [class*="Pill"],
  html.dark.theme-shadow-in [class*="badge"],
  html.dark.theme-shadow-in [class*="Badge"],
  html.dark.theme-shadow-in [class*="chip"],
  html.dark.theme-shadow-in [class*="tag"] {
    box-shadow: var(--box-shadow-dark);
  }

  /* Text shadows for standalone text (not in cards/pills) */
  html.theme-shadow-in h1:not([class*="card"] *):not([class*="Card"] *),
  html.theme-shadow-in h2:not([class*="card"] *):not([class*="Card"] *),
  html.theme-shadow-in h3:not([class*="card"] *):not([class*="Card"] *) {
    transition: text-shadow var(--phase-duration) ease-out !important;
    text-shadow: var(--text-shadow-light);
  }

  html.dark.theme-shadow-in h1:not([class*="card"] *):not([class*="Card"] *),
  html.dark.theme-shadow-in h2:not([class*="card"] *):not([class*="Card"] *),
  html.dark.theme-shadow-in h3:not([class*="card"] *):not([class*="Card"] *) {
    text-shadow: var(--text-shadow-dark);
  }

  /* Phase 2: Content melts into the page */
  html.theme-melt main {
    transition:
      opacity var(--phase-duration) ease-in,
      filter var(--phase-duration) ease-in !important;
    opacity: 0;
    filter: blur(16px);
  }

  /* Phase 2b: Hidden during color sweep */
  html.theme-hidden main {
    opacity: 0;
    filter: blur(16px);
    visibility: hidden;
  }

  /* Phase 3: Content emerges from the page */
  html.theme-unmelt main {
    transition:
      opacity var(--phase-duration) ease-out,
      filter var(--phase-duration) ease-out !important;
    opacity: 1;
    filter: blur(0);
  }

  /* Keep text shadows visible during unmelt */
  html.theme-unmelt h1,
  html.theme-unmelt h2,
  html.theme-unmelt h3,
  html.theme-unmelt p,
  html.theme-unmelt span:not([class*="slider"]),
  html.theme-unmelt a {
    text-shadow: var(--text-shadow-light);
  }

  html.dark.theme-unmelt h1,
  html.dark.theme-unmelt h2,
  html.dark.theme-unmelt h3,
  html.dark.theme-unmelt p,
  html.dark.theme-unmelt span:not([class*="slider"]),
  html.dark.theme-unmelt a {
    text-shadow: var(--text-shadow-dark);
  }

  /* Phase 4: Text shadows recede */
  html.theme-shadow-out h1,
  html.theme-shadow-out h2,
  html.theme-shadow-out h3,
  html.theme-shadow-out p,
  html.theme-shadow-out span:not([class*="slider"]),
  html.theme-shadow-out a {
    transition: text-shadow var(--phase-duration) ease-in !important;
    text-shadow: none;
  }

  /* Toggle button stays visible throughout */
  [data-theme-toggle],
  [data-theme-toggle] * {
    opacity: 1 !important;
    filter: none !important;
    text-shadow: none !important;
  }

  /* Desktop: color sweep that IS the transition */
  @media (min-width: 768px) {
    html::after {
      content: "";
      position: fixed;
      top: 0;
      width: 100%;
      height: 100%;
      pointer-events: none;
      z-index: 9997;
      opacity: 0;
    }

    /* Sunset: dark color sweeps from right to left */
    html.theme-sunset::after {
      opacity: 1;
      background: theme(colors.primary.dark);
      animation: sweep-left var(--phase-duration) linear forwards;
    }

    /* Sunrise: light color sweeps from left to right */
    html.theme-sunrise::after {
      opacity: 1;
      background: theme(colors.primary.light);
      animation: sweep-right var(--phase-duration) linear forwards;
    }
  }

  /* Sweep from right edge to left edge */
  @keyframes sweep-left {
    0% {
      transform: translateX(100%);
    }
    100% {
      transform: translateX(0%);
    }
  }

  /* Sweep from left edge to right edge */
  @keyframes sweep-right {
    0% {
      transform: translateX(-100%);
    }
    100% {
      transform: translateX(0%);
    }
  }

  /* Mobile: wave overlay for iOS status bar sync */
  @media (max-width: 767px) {
    html::before {
      content: "";
      @apply fixed pointer-events-none z-[9999] bg-primary-dark;
      top: 0;
      left: 0;
      right: 0;
      bottom: auto;
      height: 120vh;
      transform: translateY(-100%);
      clip-path: polygon(
        0% 0%,
        100% 0%,
        100% 85%,
        90% 88%,
        75% 85%,
        60% 90%,
        45% 85%,
        30% 90%,
        15% 85%,
        0% 88%
      );
    }

    html.dark::before {
      @apply bg-primary-light;
    }

    html.theme-wave::before {
      @apply animate-wash-wave;
    }
  }

  code {
    font-family: Menlo, Monaco, Lucida Console, Liberation Mono,
      DejaVu Sans Mono, Bitstream Vera Sans Mono, Courier New, monospace;
  }

  /* Reusable hover utilities */
  .hover-scale {
    @apply transition-all duration-300 ease-out;
  }
  .hover-scale:hover {
    @apply scale-105;
  }

  .hover-scale-lg {
    @apply transition-all duration-300 ease-out;
  }
  .hover-scale-lg:hover {
    @apply scale-110 opacity-80;
  }

  .hover-glow {
    @apply transition-colors duration-300;
  }
  .hover-glow:hover {
    background-color: var(--theme-tertiary);
  }
</style>
