---
import { pwaInfo } from "virtual:pwa-info";

import ReloadPrompt from "@astroComponents/ReloadPrompt.astro";
import { initThemeScript } from "@utils/theme";

export interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <meta name="description" content="Aniket's Observatorium" />
    <title>{title}</title>
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
    <meta name="generator" content={Astro.generator} />
    <link rel="apple-touch-icon" href="/apple-touch-icon.png" sizes="180x180" />
    <link rel="mask-icon" href="/mask-icon.svg" color="#ea580c" />
    <!-- Theme color - dynamically updated by theme.ts -->
    <meta name="theme-color" content="#fed7aa" />
    <!-- iOS PWA status bar -->
    <meta name="apple-mobile-web-app-capable" content="yes" />
    <meta name="apple-mobile-web-app-status-bar-style" content="default" />

    <script src="../pwa.ts"></script>
    <script set:html={initThemeScript} />
    <script>
      import { inject } from "@vercel/analytics";
      inject({ mode: import.meta.env.MODE });
    </script>
    {pwaInfo && <Fragment set:html={pwaInfo.webManifest.linkTag} />}
  </head>
  <body>
    <main>
      <slot />
    </main>
    <ReloadPrompt />
  </body>
</html>
<style is:global>
  :root {
    /* Theme colors */
    --theme-bg: theme(colors.primary.light);
    --theme-tertiary: theme(colors.tertiary.light);
    /* Transition timing */
    --phase-duration: 600ms;
    --shadow-in-duration: 400ms;
    --melt-duration: 300ms;
    /* Shadows (theme-aware) */
    --text-shadow: 0 6px 20px rgb(0 0 0 / 0.6), 0 2px 8px rgb(0 0 0 / 0.4);
    --box-shadow: 0 12px 40px rgb(0 0 0 / 0.5), 0 4px 12px rgb(0 0 0 / 0.3);
  }

  html.dark {
    --theme-bg: theme(colors.primary.dark);
    --theme-tertiary: theme(colors.tertiary.dark);
    --text-shadow: 0 6px 20px rgb(255 255 255 / 0.5), 0 2px 8px rgb(255 255 255 / 0.3);
    --box-shadow: 0 12px 40px rgb(255 255 255 / 0.4), 0 4px 12px rgb(255 255 255 / 0.2);
  }

  html {
    font-family: "JetBrains Mono", monospace;
    background-color: var(--theme-bg);
    position: relative;
    box-sizing: border-box;
  }

  :is(a, input):focus {
    outline: none;
  }

  /* Shared selectors */
  html:is(.theme-shadow-in, .theme-unmelt) :is([class*="card"], [class*="Card"], [class*="pill"], [class*="Pill"], [class*="tag"]) {
    box-shadow: var(--box-shadow);
  }

  html:is(.theme-shadow-in, .theme-unmelt) :is(h1, h2, h3) {
    text-shadow: var(--text-shadow);
  }

  html:is(.theme-melt, .theme-shadow-out) :is([class*="card"], [class*="Card"], [class*="pill"], [class*="Pill"], [class*="tag"]) {
    box-shadow: none;
  }

  html:is(.theme-melt, .theme-shadow-out) :is(h1, h2, h3) {
    text-shadow: none;
  }

  /* Phase 1: Shadows appear */
  html.theme-shadow-in :is([class*="card"], [class*="Card"], [class*="pill"], [class*="Pill"], [class*="tag"]) {
    transition: box-shadow var(--shadow-in-duration) ease-out !important;
  }

  html.theme-shadow-in :is(h1, h2, h3) {
    transition: text-shadow var(--shadow-in-duration) ease-out !important;
  }

  /* Phase 2a: Content melts */
  html.theme-melt main {
    transition: opacity var(--melt-duration) ease-in, filter var(--melt-duration) ease-in !important;
    opacity: 0;
    filter: blur(16px);
  }

  html.theme-melt :is([class*="card"], [class*="Card"], [class*="pill"], [class*="Pill"], [class*="tag"]) {
    transition: box-shadow var(--melt-duration) ease-in !important;
  }

  html.theme-melt :is(h1, h2, h3) {
    transition: text-shadow var(--melt-duration) ease-in !important;
  }

  /* Phase 2b: Hidden during sweep */
  html.theme-hidden main {
    opacity: 0;
    filter: blur(16px);
    visibility: hidden;
  }

  /* Phase 3: Content emerges */
  html.theme-unmelt main {
    transition: opacity var(--phase-duration) ease-out, filter var(--phase-duration) ease-out !important;
    opacity: 1;
    filter: blur(0);
  }

  html.theme-unmelt :is([class*="card"], [class*="Card"], [class*="pill"], [class*="Pill"], [class*="tag"]) {
    transition: box-shadow var(--phase-duration) ease-out !important;
  }

  html.theme-unmelt :is(h1, h2, h3) {
    transition: text-shadow var(--phase-duration) ease-out !important;
  }

  /* Phase 4: Shadows recede */
  html.theme-shadow-out :is([class*="card"], [class*="Card"], [class*="pill"], [class*="Pill"], [class*="tag"]) {
    transition: box-shadow var(--phase-duration) ease-in !important;
  }

  html.theme-shadow-out :is(h1, h2, h3) {
    transition: text-shadow var(--phase-duration) ease-in !important;
  }

  /* Toggle excluded from shadows */
  [data-theme-toggle], [data-theme-toggle] * {
    text-shadow: none !important;
    box-shadow: none !important;
  }

  /* Desktop: color sweep that IS the transition */
  @media (min-width: 768px) {
    html::after {
      content: "";
      position: fixed;
      top: 0;
      width: 100%;
      height: 100%;
      pointer-events: none;
      z-index: 9997;
      opacity: 0;
    }

    /* Sunset: sweeps right to left - day → dusk → evening → night */
    html.theme-sunset::after {
      opacity: 1;
      background: linear-gradient(
        to left,
        theme(colors.primary.dark) 0%,
        #1e1b4b 20%,
        #4c1d95 35%,
        #be185d 50%,
        #f97316 70%,
        transparent 100%
      );
      animation: sweep-left var(--melt-duration) ease-out forwards;
    }

    /* Sunrise: sweeps left to right - night → dawn → morning → day */
    html.theme-sunrise::after {
      opacity: 1;
      background: linear-gradient(
        to right,
        theme(colors.primary.light) 0%,
        #fcd34d 20%,
        #fb923c 35%,
        #f472b6 50%,
        #a78bfa 70%,
        transparent 100%
      );
      animation: sweep-right var(--melt-duration) ease-out forwards;
    }
  }

  @keyframes sweep-left {
    from { transform: translateX(100%); }
    to { transform: translateX(0); }
  }

  @keyframes sweep-right {
    from { transform: translateX(-100%); }
    to { transform: translateX(0); }
  }

  @keyframes wash-wave {
    from { transform: translateY(-100%); }
    to { transform: translateY(0); }
  }

  /* Mobile: wave overlay for iOS status bar sync */
  @media (max-width: 767px) {
    html::before {
      content: "";
      position: fixed;
      inset: 0 0 auto 0;
      height: 120vh;
      background: theme(colors.primary.dark);
      transform: translateY(-100%);
      pointer-events: none;
      z-index: 9999;
      clip-path: polygon(
        0% 0%, 100% 0%, 100% 85%, 90% 88%, 75% 85%,
        60% 90%, 45% 85%, 30% 90%, 15% 85%, 0% 88%
      );
    }

    html.dark::before {
      background: theme(colors.primary.light);
    }

    html.theme-wave::before {
      animation: wash-wave 600ms ease-out forwards;
    }
  }

  code {
    font-family: Menlo, Monaco, Lucida Console, Liberation Mono,
      DejaVu Sans Mono, Bitstream Vera Sans Mono, Courier New, monospace;
  }

  /* Reusable hover utilities */
  .hover-scale {
    @apply transition-all duration-300 ease-out;
  }
  .hover-scale:hover {
    @apply scale-105;
  }

  .hover-scale-lg {
    @apply transition-all duration-300 ease-out;
  }
  .hover-scale-lg:hover {
    @apply scale-110 opacity-80;
  }

  .hover-glow {
    @apply transition-colors duration-300;
  }
  .hover-glow:hover {
    background-color: var(--theme-tertiary);
  }
</style>
