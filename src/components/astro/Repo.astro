---
import StarIcon from "@svelteComponents/StarIcon.svelte";

import type { Repo } from "@utils/github";

export interface Props {
  repo: Repo;
}

const { name, description, language, stargazers, link } = Astro.props.repo;
---

<!-- prettier-ignore -->
<a
  href={link}
  target="_blank"
  class="
    group/repo relative my-4 p-4 
    rounded-md border-8 border-tertiary-light dark:border-tertiary-dark
    duration-300 hover:bg-tertiary-light hover:text-primary-light 
    dark:hover:bg-tertiary-dark dark:hover:text-primary-dark 
    sm:border-8 sm:p-6 lg:w-1/3
  "
>
  <div class="pb-1 text-lg font-bold sm:text-xl">{name}</div>
  <div class="text-md pb-7 sm:text-lg">{description}</div>
  <div
    class="
      absolute bottom-4 text-xs
    "
  >
    {language} | {stargazers}
    <StarIcon 
    client:load 
    base={20} 
    scale={1} 
    style="inline-block pb-1 group-hover/repo:fill-secondary-light group-hover/repo:dark:fill-secondary-dark"
  />
  </div>
</a>
