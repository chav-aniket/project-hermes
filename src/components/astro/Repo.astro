---
import type { Repo } from "@utils/github";
import StarIcon from "@svelteComponents/StarIcon.svelte";

export interface Props {
    repo: Repo
}

const { name, description, language, stargazers, link } = Astro.props.repo;
---
<a 
    href={link}
    target="_blank"
    class="
        relative group/repo
        border-tertiary-light dark:border-tertiary-dark 
        border-8 sm:border-8 rounded-md
        my-4 p-4 sm:p-6 lg:w-1/3
        duration-300 
        hover:bg-tertiary-light hover:text-primary-light
        dark:hover:bg-tertiary-dark dark:hover:text-primary-dark
    "
>
    <div class="text-lg sm:text-xl font-bold pb-1">{name}</div>
    <div class="text-md sm:text-lg pb-7">{description}</div>
    <div
        class="
            absolute bottom-4 text-xs 
            group-hover/repo:fill-primary-light
            group-hover/repo:dark:fill-primary-dark
        "
    >
        {language} | {stargazers}
        <StarIcon
            client:load 
            base={20}
            scale={1} 
            style="inline-block pb-1"
        />
    </div>
</a>

